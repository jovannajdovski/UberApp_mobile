<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_ride_view"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/new_ride"
    >

    <TextView
        android:id="@+id/new_ride_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:text="@string/new_ride"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/new_ride_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/new_ride_title"/>
    <TextView
        android:id="@+id/new_ride_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/new_ride_departure"/>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_ride_destination"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="1"
        tools:context=".GridXMLActivity"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:src="@drawable/ic_money"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:tint="@color/black" />
        <TextView
            android:id="@+id/new_ride_cost"
            android:textSize="18sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            tools:ignore="RtlCompat"
            android:text="Pera"
            />
        <ImageView
            android:src="@drawable/ic_time"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:tint="@color/black"
            />
        <TextView
            android:id="@+id/new_ride_time"
            android:textSize="18sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            tools:ignore="RtlCompat"
            android:text="Pera"
            />
    </GridLayout>

    <Button
        android:id="@+id/new_ride_accept_button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/new_ride_rejection_reason"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00CC33"
        android:text="Accept"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/new_ride_reject_button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/new_ride_rejection_reason"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/red"
        android:text="Reject"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/new_ride_rejection_reason"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/grid"
        android:hint="@string/rejection_reason"
        android:background="@drawable/edit_text_border"
        android:paddingHorizontal="5dp"
        android:inputType="text"
        tools:ignore="LabelFor"
        />

</RelativeLayout>