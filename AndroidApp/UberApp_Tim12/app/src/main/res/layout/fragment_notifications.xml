<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NotificationsFragment">

    <RelativeLayout
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:background="#ffffffff"/>
    </RelativeLayout>

    <View
        android:id="@+id/black_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blacked_background"/>

    <RelativeLayout
        android:id="@+id/new_ride_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/new_ride">

        <TextView
            android:id="@+id/new_ride_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="25dp"
            android:layout_centerHorizontal="true"
            android:text="@string/new_ride"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/new_ride_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:text="@string/title"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/new_ride_title"
            android:typeface="monospace"/>
        <TextView
            android:id="@+id/new_ride_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:text="@string/title"
            android:layout_marginBottom="25dp"
            android:layout_below="@id/new_ride_departure"
            android:typeface="monospace"/>

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_ride_destination"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="2"
            tools:context=".GridXMLActivity"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="0dp">
            <ImageView
                android:src="@drawable/ic_route"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/new_ride_distance"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="@string/title"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:typeface="monospace"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                tools:ignore="RtlCompat" />
            <ImageView
                android:src="@drawable/ic_friends"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/new_ride_passengers"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="@string/title"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:typeface="monospace"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                tools:ignore="RtlCompat" />
            <ImageView
                android:src="@drawable/ic_money"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/new_ride_cost"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="@string/title"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:typeface="monospace"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                tools:ignore="RtlCompat" />
            <ImageView
                android:src="@drawable/ic_time"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/new_ride_time"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="@string/title"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:typeface="monospace"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                tools:ignore="RtlCompat" />
        </GridLayout>

        <Button
            android:id="@+id/new_ride_accept_button"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/grid"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/green"
            android:text="Accept"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/new_ride_reject_button"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/grid"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/red"
            android:text="Reject"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/new_ride_rejection_reason"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/new_ride_reject_button"
            android:hint="@string/rejection_reason"
            android:background="@drawable/edit_text_border"
            android:paddingHorizontal="5dp"
            android:inputType="text"
            tools:ignore="LabelFor"
            />

    </RelativeLayout>
</FrameLayout>