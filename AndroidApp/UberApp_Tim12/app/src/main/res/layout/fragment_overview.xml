<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ConfirmationFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/new_ride_title"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/title"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/new_ride_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:text="@string/title"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/new_ride_title" />
    <TextView
        android:id="@+id/new_ride_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:text="@string/title"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/new_ride_departure"/>
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_ride_destination"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="1"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        tools:context=".GridXMLActivity"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:src="@drawable/ic_launcher_foreground"
            android:layout_height="30dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/vehicle_type"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="Volskwagen passat"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="start|center_vertical"
            android:layout_columnWeight="1"
            tools:ignore="RtlCompat" />
        <ImageView
            android:src="@drawable/ic_time"
            android:layout_height="30dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/new_ride_time"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="@string/title"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="start|center_vertical"
            android:layout_columnWeight="1"
            tools:ignore="RtlCompat" />
    </GridLayout>
    <LinearLayout
        android:id="@+id/driver_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/grid"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@color/light_yellow">
        <TextView
            android:id="@+id/driver_label"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/driver"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/driver_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_profile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="Pera peric"
            android:textSize="20sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/friends_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/driver_layout"
        android:text="@string/other_passengers"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/friends_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:choiceMode="none"
        android:background="@color/light_grey"/>
    <Button
        android:id="@+id/back_to_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@android:id/list"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/yellow"
        android:text="@string/back_to_home"
        android:textSize="18sp"/>

</RelativeLayout>