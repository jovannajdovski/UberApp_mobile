<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="darkToggleButton" parent="Widget.Material3.Button.OutlinedButton">
<!--        <item name="android:backgroundTint">#1C1B21</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="shadowMatCard" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="shadowMatCardMargined" parent="shadowMatCard">
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="whiteShadowMatCard" parent="shadowMatCardMargined">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="blueShadowMatCard" parent="shadowMatCardMargined">
        <item name="cardBackgroundColor">@color/deep_blue_1</item>
    </style>

    <style name="purpleShadowMatCard" parent="shadowMatCardMargined">
        <item name="cardBackgroundColor">#EABB1B</item>
    </style>

    <style name="greenShadowMatCard" parent="shadowMatCardMargined">
        <item name="cardBackgroundColor">#61bd28</item>
    </style>

    <style name="redShadowMatCard" parent="shadowMatCardMargined">
        <item name="cardBackgroundColor">#d60f00</item>
    </style>

    <style name="orangeShadowMatCard" parent="shadowMatCardMargined">
        <item name="cardBackgroundColor">#FF7800</item>
    </style>

    <style name="yellowBottomNavigation" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>